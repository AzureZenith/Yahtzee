            function animate()
            {
                //alert("animating...");
                
                delay(["_/`",",/'","./*","--^","=-~","~-=","^--","*&#92;.","'&#92;,",
                    "`&#92;_","'&#92;,","*&#92;.","^--","~-=","=-~","--^","./*",",/'"]);
