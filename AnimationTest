            function delay(y)
            {
                //alert("delaying: "+y);
                if(y.length>=1)
                {
                    print(y[0]);
                    //alert("y.length: "+y.length);
                    if(y.length>1)
                    {
                        //alert("setting timeout function...");
                        setTimeout(function() {
                            //alert("animating: "+animating);
